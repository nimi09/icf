<% provide(:title, @member.username + "s revenues") %>

<div class="block block_light_gray">
	<div class="container">
		<%= render 'shared/project_header' %>
	</div>
	<%= render 'shared/back_to_project' %>
</div>

<div class="block-white">
	<div class="container">

		<div class="row">
			<div class="span12">
				<h1>Total revenues: <%= @revenues.count %></h1>
				<hr>		
			</div>
		</div>

		<div class="row">

			<%= render 'shared/sidebar_member_menu' %>

			<div class="span9">

				<% unless @revenues.count == 0 %>
					<ul class="expenses_list">
						<% @revenues.each do |r| %>
							<li>
								<a href=<%= "/revenues/#{r.id}" %> >
									<div><%= r.description %></div>
									<div><%= r.date.strftime("%d. %m. %Y") %></div>
									<div><%= number_with_precision(r.amount, :precision => 2) %> <%= current_project.currency %></div>
								</a>
							</li>
						<% end %>	
					</ul>
				<% else %>
					<%= @member.username %> has not added any revenues yet.
				<% end %>

			</div>
		</div>	<!-- row -->
		
	</div>
</div>