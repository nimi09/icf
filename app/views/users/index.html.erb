<% provide(:header, "All Users") %>

<div class="block-white">
	<div class="container">

		<%= will_paginate %>

		<ul class="users">
			<% @users.each do |user| %>
				<li style="display: block; background: #eee; margin: 0 0 1px 0; line-height: 40px; padding: 0 10px;">
					<%= link_to user.username, user, style: "display: inline-block; width: 200px;" %>
					<%= user.created_projects.count %> Created_Projects &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					<%= user.projects.count %> Assigned_Projects 
					<% if current_user.admin? %>
						<%= link_to "delete", user, style: "float: right;", method: :delete, data: {confirm: "Are you sure?"} %>
					<% end %>
				</li>
			<% end %>
		</ul>

		<%= will_paginate %>

	</div>	
</div>